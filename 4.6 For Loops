# Ten Times
for i in range(1, 11):
    print(f"{i}. Hello World")

# Counting Machine
N = int(input("Count to: "))
n = 0
for i in range(N + 1):
    print(n)
    n += 1

# Counting Machine Revisited
start = int(input("Count from: "))
end = int(input("Count to: "))
count_by = int(input("Count by: "))
for i in range (start, end + 1, count_by):
    print(i)

# Counting Halves
for i in range (-20, 21):
    print(i/2)

# Xs and Ys
x = -10

while x <= 10:
    y = x ** 2
    print(f"{x}\t{y}")
    x += 0.5

# Noticing Even Numbers
for i in range (1,21):
    if i % 2 == 0:
        print(f"{i} <")
    else:
        print(i)

# Adding Values with a For Loop
number = int(input("Number: "))
sum = 0

for i in range(1,number + 1):
    print(i)
    sum += i

print(f"The sum is {sum}.")
